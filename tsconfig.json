{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@Src/*": ["./*"],
      "@Config/*": ["./config/*"],
      "@Services/*": ["./services/*"],
      "@Models/*": ["./models/*"],
      "@Controllers/*": ["./controllers/*"],
      "@Dbs/*": ["./dbs/*"],
      "@Helpers/*": ["./helpers/*"],
      "@Utils/*": ["./utils/*"],
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules"
  ],
}
